<?xml version="1.0" encoding="UTF-8"?>
<ehcache:config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ehcache="http://www.ehcache.org/v3"
        xsi:schemaLocation="http://www.ehcache.org/v3 https://www.ehcache.org/schema/ehcache-core-3.0.xsd">

    <ehcache:cache alias="Aircrafts" user-template="simple"/>
    <ehcache:cache alias="Airports" user-template="simple"/>
    <ehcache:cache alias="Query" user-template="simple"/>

    <ehcache:cache-template name="simple">
        <ehcache:expiry>
            <ehcache:ttl>10</ehcache:ttl>
        </ehcache:expiry>
        <ehcache:heap>1000</ehcache:heap>
    </ehcache:cache-template>

    <cache alias="com.example.cache_for_dummies.entity.MenuItemEntity" uses-template="default"/>

</ehcache:config>